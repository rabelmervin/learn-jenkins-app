pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build') {
            steps {
                script {
                    docker.image('node:18-alpine').inside('-v ${pwd()}:/workspace -w /workspace') {
                        // Your build steps here
                        sh 'npm install'
                        sh 'npm run build'
                    }
                }
            }
        }
    }
}
