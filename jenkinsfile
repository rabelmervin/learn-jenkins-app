pipeline {
    agent { 
        docker {  
            image 'node:18-alpine'
            args '--entrypoint=""' // Ensure shell works properly
            reuseNode true
        }
    }

    stages {
        stage('build') {
            steps {
                bat '''
                npm ci
                npm run build
                npm --version
                '''
            }
        }
    }
}
