pipeline {
    agent any

    stages {
        stage('Checkout SCM') {
            steps {
                checkout scm
            }
        }
        stage('Build') {
            steps {
                script {
                    def workspace = pwd()
                    docker.image('node:18-alpine').inside("-w ${workspace}") {
                        sh 'echo "Running inside Docker container"'
                        // Add your build steps here
                    }
                }
            }
        }
    }
}
