pipeline {
    agent { 
        docker {  // âœ… Define at the top level so it applies to all stages
            image 'node:18-alpine'
            reuseNode true
        }
    }

    stages {
        stage('build') {
            steps {
                sh '''
                npm ci
                npm run build
                npm --version
                '''
            }
        }
    }
}
